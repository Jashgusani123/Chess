<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chess - Login / Create Account</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheet/style.css">
</head>
<body class="w-full h-screen flex items-center justify-center bg-zinc-800 ">
    <div class="signup_container w-[90%] max-w-[1200px] h-auto lg:h-[90%] bg-zinc-900 rounded-lg shadow-lg overflow-hidden flex flex-wrap lg:flex-nowrap">
        <!-- Left Image Section -->
        <div class="image w-full lg:w-[40%] h-60 lg:h-full">
            <img src="/images/backimage.webp" class="h-full w-full object-cover" alt="">
        </div>

        <!-- Signup Form -->
        <form action="/register" enctype="multipart/form-data" method="post" class="w-full lg:w-[60%] h-auto lg:h-full flex flex-col gap-4 p-4 lg:p-8 justify-center items-center">
            <!-- Logo and Title -->
            <div class="img w-full h-auto lg:h-[20%] flex  items-center justify-center gap-2">
                <img src="/images/Logopng.webp" class="h-16 lg:h-full w-[100px]" alt="">
                <div class="flex  text-center flex-col justify-center gap-2">
                    <span class="text-white text-2xl lg:text-4xl font-bold text-center">Build Your Chess Empire</span>
                    <p class="text-white">Create Account</p>
                </div>
            </div>

            <!-- Avatar Selector -->
            <div class="flex flex-col items-center justify-center w-[50%] lg:w-[25%] mb-4 ">
                <input id="avatar-input" type="file" accept="image/*" class="hidden" onchange="handleImageChange(event)" name="avatar" />
                <label for="avatar-input" class="relative cursor-pointer w-[50%] aspect-square flex items-center justify-center rounded-full border-2 border-gray-300 bg-gray-100 overflow-hidden hover:bg-gray-200 transition">
                    <img id="avatar-preview" src="" alt="Avatar Preview" class="w-full h-full object-cover hidden" />
                    <?xml version="1.0" encoding="iso-8859-1"?>
                   
                    <svg fill="#000000" height="100px" width="400px" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" 
                         viewBox="0 0 487 487" xml:space="preserve">
                    <g>
                        <g>
                            <path d="M308.1,277.95c0,35.7-28.9,64.6-64.6,64.6s-64.6-28.9-64.6-64.6s28.9-64.6,64.6-64.6S308.1,242.25,308.1,277.95z
                                 M440.3,116.05c25.8,0,46.7,20.9,46.7,46.7v122.4v103.8c0,27.5-22.3,49.8-49.8,49.8H49.8c-27.5,0-49.8-22.3-49.8-49.8v-103.9
                                v-122.3l0,0c0-25.8,20.9-46.7,46.7-46.7h93.4l4.4-18.6c6.7-28.8,32.4-49.2,62-49.2h74.1c29.6,0,55.3,20.4,62,49.2l4.3,18.6H440.3z
                                 M97.4,183.45c0-12.9-10.5-23.4-23.4-23.4c-13,0-23.5,10.5-23.5,23.4s10.5,23.4,23.4,23.4C86.9,206.95,97.4,196.45,97.4,183.45z
                                 M358.7,277.95c0-63.6-51.6-115.2-115.2-115.2s-115.2,51.6-115.2,115.2s51.6,115.2,115.2,115.2S358.7,341.55,358.7,277.95z"/>
                        </g>
                    </g>
                    </svg>
                </label>
            </div>

            <!-- Form Fields -->
            <div class="fields w-full flex  justify-between items-center flex-col md:flex-row gap-2">
                <div class="first w-full lg:w-1/2 flex flex-col items-center gap-2">
                    <input type="text" class="w-[90%] bg-transparent border-2 border-white rounded-md px-2 text-white py-4" placeholder="Name" name="name">
                    <input type="text" class="w-[90%] bg-transparent border-2 border-white rounded-md px-2 text-white py-4" placeholder="Username" name="username">
                    <input type="text" class="w-[90%] bg-transparent border-2 border-white rounded-md px-2 text-white py-4" placeholder="Gender" name="gender">
                </div>
                <div class="second w-full lg:w-1/2 flex flex-col items-center gap-2">
                    <input type="email" class="w-[90%] bg-transparent border-2 border-white rounded-md px-2 text-white py-4" placeholder="Email" name="email">
                    <input type="password" class="w-[90%] bg-transparent border-2 border-white rounded-md px-2 text-white py-4" placeholder="Password" name="password">
                </div>
            </div>

            <!-- Submit Button -->
            <button class="w-[60%] lg:w-[40%] bg-green-600 text-white text-lg h-10 rounded-md hover:bg-green-700 transition" type="submit">Sign Up</button>
            <a href="/login" class="text-white mt-4">Already Have an Account - <span class="text-[lightgreen]">Login</span></a>
        </form>
    </div>

    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"
        integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"
        integrity="sha512-xRllwz2gdZciIB+AkEbeq+gVhX8VB8XsfqeFbUh+SzHlN96dEduwtTuVuc2u9EROlmW9+yhRlxjif66ORpsgVA=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        function handleImageChange(event) {
            const file = event.target.files[0];
            const preview = document.getElementById("avatar-preview");
            const cameraIcon = document.getElementById("camera-icon");

            if (file) {
                const reader = new FileReader();
                reader.onloadend = () => {
                    preview.src = reader.result;
                    preview.classList.remove("hidden"); // Show the preview
                    cameraIcon.classList.add("hidden"); // Hide the camera icon
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
    <script src="/javascript/ChessGame.js"></script>
</body>


</html>
